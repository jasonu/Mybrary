<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label>Title</label>
    <input name="title" type="text" value="<%= searchOptions.title %>"/>
  </div>
  <div>
    <label>Published After</label>
    <input name="publishedAfter" type="date"
	   value="<%= searchOptions.publishedAfter %>"/>
  </div>
  <div>
    <label>Published Before</label>
    <input name="publishedBefore" type="date"
	   value="<%= searchOptions.publishedBefore %>"/>
  </div>
  <button type="submit">Search</button>
</form>
<div>
  <% books.forEach(book => { %>
    <a href="/books/<%= book.id %>">
      <img height="150" width="100" src="<%= book.coverImagePath %>"/>
    </a>
  <% }) %>
</div>
