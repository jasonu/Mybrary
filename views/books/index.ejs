<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Title</label>
      <input name="title"
	     type="text"
	     value="<%= searchOptions.title %>">
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label>Published After</label>
      <input name="publishedAfter" type="date"
	     value="<%= searchOptions.publishedAfter %>"/>
    </div>
    <div class="form-item">
      <label>Published Before</label>
      <input name="publishedBefore" type="date"
	     value="<%= searchOptions.publishedBefore %>"/>
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br>
<%- include('../partials/bookGrid', { books: books, large: true }) %>
